<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/activity_sign_up_email_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="15dp"
            android:src="@drawable/back_button_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/activity_sign_up_email_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/activity_sign_up_email_back"
            android:layout_marginEnd="20dp"
            android:textSize="15sp"
            android:text="완료"/>

    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이메일"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/activity_sign_up_email_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:hint="이메일을 입력해주세요.          "
            android:inputType="textEmailAddress"
            android:textSize="15sp"
            android:layout_marginStart="20dp"/>

        <Button
            android:id="@+id/activity_sign_up_email_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/activity_sign_up_email_test_button_2"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/activity_sign_up_email_input"
            android:text="중복확인"
            android:textSize="14sp"/>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/activity_sign_up_email_sub"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    </FrameLayout>



</LinearLayout>