<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/activity_sign_up_email_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="15dp"
            android:src="@drawable/back_button_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/activity_sign_up_email_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/activity_sign_up_email_back"
            android:layout_marginEnd="20dp"
            android:textSize="15sp"
            android:textColor="@color/grey"
            android:text="완료"/>

    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이메일"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/activity_sign_up_email_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:hint="이메일을 입력해주세요."
            android:inputType="textEmailAddress"
            android:textSize="15sp"
            android:layout_marginStart="20dp"/>

        <Button
            android:id="@+id/activity_sign_up_email_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/activity_sign_up_email_test_button_2"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/activity_sign_up_email_input"
            android:text="중복확인"
            android:textSize="14sp"/>

    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"
        android:text="닉네임"
        android:textColor="@color/black"
        android:textSize="15sp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/activity_sign_up_nickname_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:textSize="14sp"
            android:hint="2-10자로 입력해주세요."/>


        <ImageView
            android:id="@+id/activity_sign_up_nickname_check"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginEnd="25dp"
            android:layout_gravity="center_vertical|right"/>

    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"
        android:text="비밀번호"
        android:textColor="@color/black"
        android:textSize="15sp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/activity_sign_up_password_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:inputType="textPassword"
            android:textSize="14sp"
            android:hint="비밀번호를 입력해주세요."/>


        <ImageView
            android:id="@+id/activity_sign_up_password_check"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginEnd="25dp"
            android:layout_gravity="center_vertical|right"/>

    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"
        android:text="생년월일"
        android:textColor="@color/black"
        android:textSize="15sp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <EditText
            android:id="@+id/activity_sign_up_birth_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:textSize="14sp"
            android:hint="예) 2000.01.01"/>


        <ImageView
            android:id="@+id/activity_sign_up_birth_check"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginEnd="25dp"
            android:layout_gravity="center_vertical|right"/>

    </FrameLayout>



</LinearLayout>