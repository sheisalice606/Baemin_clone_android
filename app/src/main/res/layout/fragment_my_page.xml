<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".src.main.MyPageFragment">

    <RelativeLayout
        android:id="@+id/toolbar_my_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/toolbar_my_page_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_centerInParent="true"
            android:text="My배민"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/ns_my_page"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CCCCCC"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="#EDEDED"/>

            <ImageView
                android:id="@+id/before_login_my_page_img_1"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:src="@drawable/before_login_my_page_img_1"
                android:scaleType="fitXY"/>

            <ImageView
                android:id="@+id/before_login_my_page_img_2"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:src="@drawable/before_login_my_page_img_2"
                android:scaleType="fitXY"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CCCCCC"/>


            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:shrinkColumns="*">
                <TableRow>

                    <ImageView
                        android:layout_height="100dp"
                        android:layout_width="wrap_content"
                        android:src="@drawable/my_page_menu_point"/>

                    <ImageView
                        android:layout_height="100dp"
                        android:layout_width="wrap_content"
                        android:src="@drawable/my_page_menu_cupon"/>

                    <ImageView
                        android:layout_height="100dp"
                        android:layout_width="wrap_content"
                        android:src="@drawable/my_page_menu_present"/>

                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC"/>

                <TableRow>

                    <ImageView
                        android:layout_height="100dp"
                        android:layout_width="wrap_content"
                        android:src="@drawable/my_page_menu_love"/>

                    <ImageView
                        android:layout_height="100dp"
                        android:layout_width="wrap_content"
                        android:src="@drawable/my_page_menu_history"/>

                    <ImageView
                        android:layout_height="100dp"
                        android:layout_width="wrap_content"
                        android:src="@drawable/my_page_menu_review"/>

                </TableRow>
            </TableLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="#EDEDED"/>

            <ImageView
                android:id="@+id/my_page_menu_green"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/my_page_menu_green" />

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="#EDEDED"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/my_page_list_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/my_page_list_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#CCCCCC"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_margin="20dp"
                    android:text="Copyright Woowa Brothers in Song-pa, All Rights Reserved."
                    android:textSize="12sp"/>

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>